{
  "name": "jota-app",
  "version": "0.0.1",
  "description": "Ergonomic app to search and read the Bible",
  "productName": "Jota Bible App",
  "author": "Jacek Kolodziejczyk <jacek.p.kolodziejczyk@gmail.com>",
  "private": true,
  "scripts": {
    "lint": "eslint --ext .js,.ts,.vue ./",
    "format": "prettier --write \"**/*.{js,ts,vue,scss,html,md,json}\" --ignore-path .gitignore",
    "test": "echo \"See package.json => scripts for available tests.\" && exit 0",
    "dev": "quasar dev",
    "build": "quasar build",
    "custom-icons": "fantasticon src/custom-icons/svg -o src/assets/custom-icons --normalize -t woff woff2 -g css",
    "test:unit:ui": "vitest --ui",
    "test:unit": "vitest",
    "test:unit:ci": "vitest run"
  },
  "dependencies": {
    "@quasar/extras": "^1.16.9",
    "@vueuse/core": "^10.3.0",
    "flag-icons": "^7.0.2",
    "jota-parser": "^1.0.6",
    "pinia": "^2.1.6",
    "quasar": "^2.14.5",
    "vue": "^3.3.4",
    "vue-i18n": "^9.2.2",
    "vue-router": "^4.2.4"
  },
  "devDependencies": {
    "@intlify/vite-plugin-vue-i18n": "^3.4.0",
    "@quasar/app-vite": "^1.7.3",
    "@quasar/quasar-app-extension-testing-unit-vitest": "^0.4.0",
    "@types/node": "^14",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "autoprefixer": "^10.4.15",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-vue": "^9.17.0",
    "prettier": "^2.8.8",
    "typescript": "^4.9.5",
    "vitest": "^0.34.0",
    "@vue/test-utils": "^2.4.1"
  },
  "engines": {
    "node": "^18 || ^16 || ^14.19",
    "npm": ">= 6.13.4",
    "yarn": ">= 1.21.1"
  }
}
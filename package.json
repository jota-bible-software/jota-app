{
  "name": "jota-bible-app",
  "version": "2.3.0",
  "description": "Ergonomic app to search and read the Bible",
  "productName": "Jota Bible App",
  "author": "Jacek Kolodziejczyk <jacek.p.kolodziejczyk@gmail.com>",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter @jota/web run dev",
    "build": "pnpm run build:packages && pnpm --filter @jota/web run build",
    "build:packages": "pnpm -r --filter './packages/*' run build",
    "build:core": "pnpm --filter @jota/core run build",
    "build:adapters": "pnpm --filter @jota/adapters run build",
    "build:web": "pnpm --filter @jota/web run build",
    "dev:packages": "pnpm -r --filter './packages/*' run dev",
    "dev:web": "pnpm --filter @jota/web run dev",
    "typecheck:packages": "pnpm -r --filter './packages/*' run typecheck",
    "clean:packages": "pnpm -r --filter './packages/*' run clean",
    "lint": "pnpm -r run lint",
    "lint:web": "pnpm --filter @jota/web run lint",
    "format": "prettier --write \"**/*.{js,ts,vue,scss,html,md,json}\" --ignore-path .gitignore",
    "test:unit": "pnpm --filter @jota/web run test:unit",
    "test:unit:ci": "pnpm --filter @jota/web run test:unit:ci",
    "test:unit:ui": "pnpm --filter @jota/web run test:unit:ui",
    "test:e2e": "pnpm --filter @jota/web run test:e2e",
    "test:e2e:ci": "pnpm --filter @jota/web run test:e2e:ci",
    "test:component": "pnpm --filter @jota/web run test:component",
    "test:component:ci": "pnpm --filter @jota/web run test:component:ci"
  },
  "devDependencies": {
    "prettier": "^2.8.8",
    "typescript": "~5.5.4"
  },
  "engines": {
    "node": "^18 || ^16 || ^14.19",
    "npm": ">= 6.13.4",
    "yarn": ">= 1.21.1"
  }
}
